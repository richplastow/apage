{
  "name": "apage",
  "version": "0.0.5",
  "license": "MIT",
  "homepage": "http://apage.richplastow.com/",
  "author": "Rich Plastow <rich@richplastow.com> (http://richplastow.com/)",
  "description": "A single-page website from lots of markdown",
  "main": "./build/apage.js",
  "bin":{
    "apage": "./bin/apage",
    "akaybe-build": "./bin/akaybe-build"
  },
  "preferGlobal": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/richplastow/apage.git"
  },
  "keywords": [
    "markdown",
    "html",
    "concatenate",
    "single",
    "page",
    "doc",
    "documentation",
    "generator",
    "coffeescript",
    "litcoffee"
  ],
  "dependencies": {
    "marked": "latest"
  },
  "devDependencies": {
    "coffee-script": "latest",
    "nodemon": "latest"
  },
  "scripts": {
    "build": "node bin/akaybe-build",
    "test": "node test/run-test.js",
    "pages": "npm run p:home; npm run p:doc; ",
    "p:home": "./bin/apage -i README.md -o index.html -t Apage",
    "p:doc": "./bin/apage --output doc/index.html --title Documentation --input doc/*.md"
  }
}
